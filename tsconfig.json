{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": false,
    "outDir": "./dist",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": [
        "./src/ts/components/*"
      ],
      "@templates/*": [
        "./src/ts/templates/*"
      ],
      "@customTypes/*": [
        "./src/ts/types/*"
      ],
      "@pages/*": [
        "./src/ts/pages/*"
      ],
      "@catalog/*": [
        "./src/ts/pages/catalog/*"
      ],
      "@servicePages/*": [
        "./src/ts/pages/service-pages/*"
      ],
      "@fonts/*": [
        "./src/assets/fonts/*"
      ],
      "@icons/*": [
        "./src/assets/icons/*"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ],
    }
  },
  "files": [
    "src/index.ts"
  ]
}