{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": false,
    "outDir": "./dist",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@templates/*": [
        "./src/app/templates/*"
      ],
      "@customTypes/*": [
        "./src/app/types/*"
      ],
      "@validation/*": [
        "./src/app/validation/*"
      ],
      "@pages/*": [
        "./src/app/pages/*"
      ],
      "@catalog/*": [
        "./src/app/pages/catalog/*"
      ],
      "@servicePages/*": [
        "./src/app/pages/service-pages/*"
      ],
      "@fonts/*": [
        "./src/assets/fonts/*"
      ],
      "@icons/*": [
        "./src/assets/icons/*"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
    }
  },
  "files": [
    "src/index.ts",
    "src/index.d.ts"
  ],
}